<%
day_tag=[l(:mail_reminder_all_day1),l(:mail_reminder_all_day2),l(:mail_reminder_all_day2),l(:mail_reminder_all_day2),l(:mail_reminder_all_day5)]
if @assigned_issues.length > 0 
case @assigned_issues.length
  when 1 then -%><%= l(:mail_body_reminder_assigned1, :count => @assigned_issues.size  ) %>
<%  when 2..4 then -%><%= l(:mail_body_reminder_assigned2, :count => @assigned_issues.size ) %>
<%  else -%><%= l(:mail_body_reminder_assigned5, :count => @assigned_issues.size  ) %>
<% end -%>
      
<% @assigned_issues.each do |issue| -%>
*  <%= "#{issue.project} - #{issue.tracker} ##{issue.id}: #{issue.subject}" %>
<% end -%>
<% end
if @auth_issues.length > 0 
case @auth_issues.length
  when 1 then -%> <%= l(:mail_body_reminder_auth1, :count => @auth_issues.size) %>
<% when 2..4 then -%> <%= l(:mail_body_reminder_auth2, :count => @auth_issues.size) %>
<% else -%> <%= l(:mail_body_reminder_auth5, :count => @auth_issues.size) %>
<% end -%>
  
<% @auth_issues.each do |issue| -%>
* <%= "#{issue.project} - #{issue.tracker} ##{issue.id}: #{issue.subject}  -- #{issue.assigned_to}" %>
<% end -%>
<% end -%>



